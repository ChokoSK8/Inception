server {
	listen 443 ssl;
	listen [::]:443 ssl;

	root	/var/www/$DOMAIN_NAME;

	ssl_certificate_key /home/srcs/openssl/$DOMAIN_NAME.key;
	ssl_certificate /home/srcs/openssl/$DOMAIN_NAME.crt;
	ssl_protocols TLSv1.2 TLSv1.3;

	index	index.html;
	server_name	$DOMAIN_NAME www.$DOMAIN_NAME;

	location / {
		try_files $uri $uri/ =404;
	}
}
